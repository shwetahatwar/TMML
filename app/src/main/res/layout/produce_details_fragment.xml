<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.ProduceDetailsFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/ic_onboard_background" />

    <TextView
        android:id="@+id/label_productName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Product Name" />


    <TextView
        android:id="@+id/text_productName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/lato_bold"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/label_productName"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Flanges+" />

    <TextView
        android:id="@+id/label_productDetailsId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/text_productName"
        app:layout_constraintStart_toStartOf="@id/label_productName"
        android:text="Product Details ID" />

    <TextView
        android:id="@+id/text_productDetailsId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="@id/label_productDetailsId"
        app:layout_constraintStart_toEndOf="@id/label_productDetailsId"
        android:text="123456789" />

    <TextView
        android:id="@+id/label_productStockId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/text_productDetailsId"
        app:layout_constraintStart_toStartOf="@id/label_productName"
        android:text="Product Stock ID" />

    <TextView
        android:id="@+id/text_productStockId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/label_productStockId"
        app:layout_constraintStart_toStartOf="@id/text_productDetailsId"
        android:text="123456789" />


    <TextView
        android:id="@+id/label_itemId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/text_productStockId"
        app:layout_constraintStart_toStartOf="@id/label_productName"
        android:text="Item ID" />

    <TextView
        android:id="@+id/text_itemId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/label_itemId"
        app:layout_constraintStart_toStartOf="@id/text_productDetailsId"
        android:text="Item ID" />

    <TextView
        android:id="@+id/label_itemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/text_itemId"
        app:layout_constraintStart_toStartOf="@id/label_productName"
        android:text="Item Name" />

    <TextView
        android:id="@+id/text_itemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/label_itemName"
        app:layout_constraintStart_toStartOf="@id/text_productDetailsId"
        android:text="Item Name" />

    <TextView
        android:id="@+id/label_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/text_itemName"
        app:layout_constraintStart_toStartOf="@id/label_productName"
        android:text="Quantity" />

    <TextView
        android:id="@+id/text_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/label_quantity"
        app:layout_constraintStart_toStartOf="@id/text_productDetailsId"
        android:text="0" />


    <TextView
        android:id="@+id/text_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="@id/label_quantity"
        app:layout_constraintStart_toEndOf="@id/text_quantity"
        android:text="NA" />

    <TextView
        android:id="@+id/label_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/text_unit"
        app:layout_constraintStart_toStartOf="@id/label_productName"
        android:text="Account Name" />

    <TextView
        android:id="@+id/text_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/label_account"
        app:layout_constraintStart_toStartOf="@id/text_productDetailsId"
        android:text="NA" />

    <TextView
        android:id="@+id/label_projectId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/text_account"
        app:layout_constraintStart_toStartOf="@id/label_productName"
        android:text="Project ID" />

    <TextView
        android:id="@+id/text_projectId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/label_projectId"
        app:layout_constraintStart_toStartOf="@id/text_productDetailsId"
        android:text="Project ID" />

    <TextView
        android:id="@+id/label_projectName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/text_projectId"
        app:layout_constraintStart_toStartOf="@id/label_productName"
        android:text="Project Name" />

    <TextView
        android:id="@+id/text_projectName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/label_projectName"
        app:layout_constraintStart_toStartOf="@id/text_productDetailsId"
        android:text="Project Name" />

</android.support.constraint.ConstraintLayout>