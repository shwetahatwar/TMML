<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".ui.main.StopPartProcess">

<EditText
    android:layout_width="290dp"
    android:layout_height="46dp"
    android:ems="10"
    android:hint="Job Card Barcode"
    android:background="@drawable/edittext_bg"
    android:paddingLeft="10dp"
    android:id="@+id/editText6"
    android:layout_marginTop="24dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>
<EditText
    android:layout_width="290dp"
    android:layout_height="46dp"
    android:inputType="number"
    android:ems="10"
    android:hint="Enter quntity"
    android:background="@drawable/edittext_bg"
    android:paddingLeft="10dp"
    android:id="@+id/editText"
    app:layout_constraintTop_toBottomOf="@+id/editText6"
    android:layout_marginTop="16dp"
    app:layout_constraintStart_toStartOf="@+id/editText6"
    app:layout_constraintEnd_toEndOf="@+id/editText6"/>

    <TextView
        android:id="@+id/lable1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Scheduled quantity:240"
        app:layout_constraintStart_toStartOf="@+id/editText4"
        app:layout_constraintTop_toBottomOf="@+id/editText4" />
<Spinner
    android:layout_width="290dp"
    android:layout_height="46dp"
    android:background="@android:drawable/btn_dropdown"
    android:id="@+id/spinner"
    app:layout_constraintStart_toStartOf="@+id/editText"
    app:layout_constraintEnd_toEndOf="@+id/editText"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_marginTop="8dp"
    app:layout_constraintTop_toBottomOf="@+id/editText"
    app:layout_constraintVertical_bias="0.11"/>
<EditText
    android:layout_width="290dp"
    android:layout_height="124dp"
    android:inputType="textMultiLine"
    android:gravity="start|top"
    android:ems="10"
    android:id="@+id/editText4"
    android:hint="Remark,if any"
    android:background="@drawable/edittext_bg"
    android:paddingLeft="10dp"
    app:layout_constraintStart_toStartOf="@+id/spinner"
    app:layout_constraintEnd_toEndOf="@+id/spinner"
    app:layout_constraintTop_toBottomOf="@+id/spinner"
    android:layout_marginTop="8dp"
    app:layout_constraintHorizontal_bias="0.0"/>
<Button
    android:text="STOP"
    android:layout_width="290dp"
    android:layout_height="46dp"
    android:padding="10dp"
    android:background="@drawable/button_states"
    android:id="@+id/button3"
    android:layout_marginTop="34dp"
    app:layout_constraintTop_toBottomOf="@+id/editText4"
    app:layout_constraintStart_toStartOf="@+id/editText4"
    app:layout_constraintEnd_toEndOf="@+id/editText4"
    android:textColor="#FFFFFF"
    android:textStyle="bold"
    android:textSize="18sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>