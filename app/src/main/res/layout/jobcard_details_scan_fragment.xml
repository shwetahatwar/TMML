<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.AssetDetailsScanFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/ic_onboard_background" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/jobcardScanText"
        android:layout_width="280dp"
        android:layout_height="46dp"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:imeOptions="actionDone"
        android:hint="Job Card barcode"
        android:inputType="textNoSuggestions"
        android:maxLength="30"
        android:paddingLeft="10dp"
        android:background="@drawable/edittext_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/viewJobcardDetails"
        android:layout_width="280dp"
        android:layout_height="46dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/button_states"
        android:text="@string/view_jobcard_details"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/jobcardScanText" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/jobcardItemsList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:background="@color/pp_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewJobcardDetails" />

</androidx.constraintlayout.widget.ConstraintLayout>