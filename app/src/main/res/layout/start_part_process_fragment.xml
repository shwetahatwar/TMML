<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.StartPartProcess">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/startPartMachineBarcodeScan"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:background="@drawable/edittext_bg"
                android:ems="10"
                android:hint="Machine Barcode"
                android:maxLines="1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="10dp"
                android:inputType="textNoSuggestions"
                android:imeOptions="actionDone"/>


            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/startPartJobcardBarcodeScan"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:background="@drawable/edittext_bg"
                android:ems="10"
                android:maxLines="1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="10dp"
                android:inputType="textNoSuggestions"
                android:imeOptions="actionDone"
                android:hint="Jocard Barcode" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/startPartOperatorBarcodeScan"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:background="@drawable/edittext_bg"
                android:ems="10"
                android:maxLines="1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="10dp"
                android:inputType="textNoSuggestions"
                android:imeOptions="actionDone"
                android:hint="Operator Barcode" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/startPartMultiplicationFactor"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:background="@drawable/edittext_bg"
                android:ems="10"
                android:maxLines="1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="10dp"
                android:inputType="textNoSuggestions"
                android:imeOptions="actionDone"
                android:hint="Multiplication Factor"
                android:text="1"
                android:visibility="visible" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnStartPartProcess"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/button_states"
                android:text="START"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"/>


        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>