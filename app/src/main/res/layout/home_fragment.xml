<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="5dp"
    android:paddingEnd="5dp"
    android:paddingBottom="5dp"
    android:paddingTop="5dp"
    tools:context=".ui.main.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/jobCardDetails"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/assetDetailsButtonBackground"
            android:drawableRight="@drawable/ic_navigate_next_black_24dp"
            android:drawablePadding="20dp"
            android:text="@string/job_card_details"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="@color/assetDetailsButtonTitle"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/startPartProcess"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"
            android:background="@color/auditAssetButtonBackground"
            android:drawableRight="@drawable/ic_navigate_next_black_24dp"
            android:drawablePadding="20dp"
            android:text="@string/start_part_process"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="@color/auditAssetButtonTitleButtonTitle"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/stopPartProcess"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"
            android:background="@color/moveAssetButtonBackground"
            android:drawableRight="@drawable/ic_navigate_next_black_24dp"
            android:drawablePadding="20dp"
            android:text="@string/stop_part_process"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="@color/moveAssetButtonTitle"
            android:textSize="16sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/pendingItemsDashboard"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="8dp"
            android:background="@color/reportButtonBackground"
            android:drawableRight="@drawable/ic_navigate_next_black_24dp"
            android:drawablePadding="20dp"
            android:text="@string/pending_items_dashboard"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="@color/reportButtonTitle"
            android:textSize="16sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/machineMaintenance"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="8dp"
            android:background="@color/reportButtonBackground"
            android:drawableRight="@drawable/ic_navigate_next_black_24dp"
            android:drawablePadding="20dp"
            android:text="@string/machine_maintenance"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="@color/reportButtonTitle"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>