<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".ui.main.MachineMaintenance">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/ic_onboard_background" />

<androidx.appcompat.widget.AppCompatEditText
    android:id="@+id/MachineScanText"
    android:layout_width="280dp"
    android:layout_height="46dp"
    android:layout_marginTop="14dp"
    android:ems="10"
    android:imeOptions="actionDone"
    android:hint="Machine barcode"
    android:inputType="textNoSuggestions"
    android:maxLength="30"
    android:paddingLeft="10dp"
    android:background="@drawable/edittext_bg"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnsubmit"
        android:layout_width="280dp"
        android:layout_height="46dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/button_states"
        android:text="@string/submit"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/machineRemark"
        app:layout_constraintStart_toStartOf="@+id/machineRemark"
        app:layout_constraintTop_toBottomOf="@+id/machineRemark" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/JobcardItemsList"
        android:layout_width="401dp"
        android:layout_height="120dp"
        android:layout_marginTop="8dp"
        android:background="@color/pp_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MachineScanText" />

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/spinner"
        android:layout_width="290dp"
        android:layout_height="46dp"
        android:layout_marginTop="4dp"
        android:background="@android:drawable/btn_dropdown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/JobcardItemsList" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/machineBarcode"
        android:layout_width="280dp"
        android:layout_height="46dp"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:imeOptions="actionDone"
        android:hint="Machine barcode"
        android:inputType="textNoSuggestions"
        android:maxLength="30"
        android:paddingLeft="10dp"
        android:background="@drawable/edittext_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/machinePartReplace"
        android:layout_width="280dp"
        android:layout_height="46dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/edittext_bg"
        android:ems="10"
        android:hint="Part Replace"
        android:imeOptions="actionDone"
        android:inputType="textNoSuggestions"
        android:maxLength="30"
        android:paddingLeft="10dp"
        app:layout_constraintEnd_toEndOf="@+id/spinner"
        app:layout_constraintStart_toStartOf="@+id/spinner"
        app:layout_constraintTop_toBottomOf="@+id/spinner" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/machineRemark"
        android:layout_width="280dp"
        android:layout_height="124dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/edittext_bg"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Remark,if any"
        android:inputType="textMultiLine"
        android:paddingLeft="10dp"
        app:layout_constraintEnd_toEndOf="@+id/machinePartReplace"
        app:layout_constraintStart_toStartOf="@+id/machinePartReplace"
        app:layout_constraintTop_toBottomOf="@+id/machinePartReplace" />


</androidx.constraintlayout.widget.ConstraintLayout>