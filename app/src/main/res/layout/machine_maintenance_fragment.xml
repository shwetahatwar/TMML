<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".ui.main.MachineMaintenance">

<ImageView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scaleType="fitXY"
    app:srcCompat="@drawable/ic_onboard_background" />

<androidx.appcompat.widget.AppCompatEditText
    android:id="@+id/MachineScanText"
    android:layout_width="280dp"
    android:layout_height="46dp"
    android:layout_marginTop="14dp"
    android:ems="10"
    android:imeOptions="actionDone"
    android:hint="Machine barcode"
    android:inputType="textNoSuggestions"
    android:maxLength="30"
    android:paddingLeft="10dp"
    android:background="@drawable/edittext_bg"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/viewMachineMaintenanceDetails"
        android:layout_width="280dp"
        android:layout_height="46dp"
        android:background="@drawable/button_states"
        android:text="@string/submit"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="79dp"
        tools:layout_editor_absoluteY="503dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/JobcardItemsList"
        android:layout_width="420dp"
        android:layout_height="195dp"
        android:layout_marginTop="8dp"
        android:background="@color/pp_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MachineScanText" />

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/spinner"
        android:layout_width="290dp"
        android:layout_height="46dp"
        android:layout_marginTop="4dp"
        android:background="@android:drawable/btn_dropdown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/JobcardItemsList" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/MachineRemarkText"
        android:layout_width="280dp"
        android:layout_height="46dp"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:imeOptions="actionDone"
        android:hint="Machine barcode"
        android:inputType="textNoSuggestions"
        android:maxLength="30"
        android:paddingLeft="10dp"
        android:background="@drawable/edittext_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>