<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
    tools:context=".ui.main.MachineMaintenanceFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start|right"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/MachineScanText"
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="2dp"
                android:layout_weight="2"
                android:background="@drawable/edittext_bg"
                android:ems="10"
                android:hint="Machine barcode"
                android:imeOptions="actionDone"
                android:inputType="textNoSuggestions"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColorHint="@android:color/darker_gray" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnsubmit"
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:text="@string/Scan"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/machineItemsList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:visibility="invisible" />

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/machineStateSpinner"
            style="@style/spinner_style"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"

            android:background="@android:drawable/editbox_dropdown_light_frame"
            android:entries="@array/machine_state_array"
            android:spinnerMode="dialog"
            android:theme="@style/AppTheme"
            android:visibility="invisible"
            tools:ignore="OnClick" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/maintenanceOperatorId"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edittext_bg"
            android:ems="10"
            android:enabled="true"
            android:hint="Maintenance Operator"
            android:imeOptions="actionDone"
            android:inputType="textNoSuggestions"
            android:maxLength="30"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColorHint="@android:color/darker_gray"
            android:visibility="invisible" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/machinePartReplace"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edittext_bg"
            android:ems="10"
            android:enabled="true"
            android:hint="Part Replace"
            android:imeOptions="actionDone"
            android:inputType="textNoSuggestions"
            android:maxLength="30"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColorHint="@android:color/darker_gray"
            android:visibility="invisible" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/machinePartCost"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edittext_bg"
            android:ems="10"
            android:enabled="true"
            android:hint="Machine Part Cost"
            android:imeOptions="actionDone"
            android:inputType="textNoSuggestions"
            android:maxLength="30"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColorHint="@android:color/darker_gray"
            android:visibility="invisible" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/machineRemark"
            android:layout_width="match_parent"
            android:layout_height="103dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/edittext_bg"
            android:ems="10"
            android:gravity="start|top"
            android:hint="Remark,if any"
            android:inputType="textMultiLine"
            android:maxLength="240"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColorHint="@android:color/darker_gray"
            android:visibility="invisible" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/lable1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:paddingLeft="5dp"
            android:text="Max Character:240"
            android:textColor="@android:color/darker_gray"
            android:visibility="invisible" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnUpdateStatus"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:background="@color/colorPrimary"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:text="Update Status"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="invisible" />

    </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>