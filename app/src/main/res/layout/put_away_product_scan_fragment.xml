<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.PutAwayProductScanFragment">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/ic_onboard_background" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/putAwayLocationScanText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_marginEnd="5dp"
        android:text="Location"
        android:textColor="@color/colorTextEntry"
        android:textAlignment="viewEnd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_marginEnd="5dp"
        android:text="Rack ID"
        android:textColor="@color/colorTextEntry"
        android:textAlignment="viewEnd"
        app:layout_constraintEnd_toStartOf="@id/putAwayLocationScanText"/>

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/putAwayProductScanText"
        android:layout_width="268dp"
        android:layout_height="45dp"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:hint="Asset Barcode"
        android:inputType="textNoSuggestions"
        android:maxLength="30"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/submitProducts"
        android:layout_width="268dp"
        android:layout_height="54dp"
        android:layout_marginTop="14dp"
        android:background="@color/colorPrimary"
        android:text="Submit"
        android:textAllCaps="false"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/putAwayProductScanText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <android.support.v7.widget.RecyclerView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:id="@+id/productsList"
        app:layout_constraintTop_toBottomOf="@id/submitProducts"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>